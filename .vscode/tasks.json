{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-g",
                "${workspaceFolder}/src/*.cpp",
                "-I${workspaceFolder}/include/*.hpp",
                "-o",
                "${workspaceFolder}/bin/Graph",
                "-lSDL2",
                "-ldl",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-Wall"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        }
    ]
}